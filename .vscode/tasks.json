{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "args": ["/c"],
    "tasks": [
        {
            "group": "build",
            "label": "make",
            "command": "${env:GDK}/bin/make",
            "args": [
                "-s", "-f", "${env:GDK}/makefile.gen"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "${env:GDK}/bin/make",
            "args": [
                "-s", "-f", "${env:GDK}/makefile.gen", "clean"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
